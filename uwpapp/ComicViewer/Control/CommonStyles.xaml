<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ComicViewer">
    
    
    <!--Goto Page Add and Remove Bookmarks buttons-->
    
    <Style x:Key="AddBookmarkAppBarButtonStyle" TargetType="ButtonBase" BasedOn="{StaticResource AppBarButtonStyle}">
        <Setter Property="AutomationProperties.AutomationId" Value="BookmarksAppBarButton" />
        <Setter Property="AutomationProperties.Name" Value="Add" />
        <Setter Property="Content" Value="&#xE139;" />
    </Style>

    <Style x:Key="DeleteBookmarkAppBarButtonStyle" TargetType="ButtonBase" BasedOn="{StaticResource AppBarButtonStyle}">
        <Setter Property="AutomationProperties.AutomationId" Value="BookmarksAppBarButton" />
        <Setter Property="AutomationProperties.Name" Value="Remove All" />
        <Setter Property="Content" Value="&#xE106;" />
    </Style>

</ResourceDictionary>
